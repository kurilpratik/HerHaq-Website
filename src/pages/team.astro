---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import teamData from "../data/teamData";

// Import hero banner image
import heroBanner from "../../public/banner/home.jpg";

// Import all team member images
import aanyaWig from "../../assets/team/Aanya Wig.jpg";
import soumyaSinghal from "../../assets/team/Soumya Singhal_.jpg";
import yagnesh from "../../assets/team/Yagnesh Sharma_.jpg";
import arshia from "../../assets/team/Arshia.jpg";
import deepanshi from "../../assets/team/Deepanshi.png";
import mehakSaini from "../../assets/team/Mehak Saini.png";

// Create a mapping object for team member images
const teamImages = {
  "/assets/team/Aanya Wig.jpg": aanyaWig,
  "/assets/team/Soumya Singhal_.jpg": soumyaSinghal,
  "/assets/team/Yagnesh Sharma_.jpg": yagnesh,
  "/assets/team/Arshia.jpg": arshia,
  "/assets/team/Deepanshi.png": deepanshi,
  "/assets/team/Mehak Saini.png": mehakSaini,
};
---

<MainLayout title="Our Team" description="The Her Haq Team">
  <section class="hero">
    <div class="hero-background">
      <Image
        src={heroBanner}
        alt="Empowering Women"
        class="hero-image"
        width={1920}
        height={1080}
      />
      <div class="hero-overlay"></div>
    </div>
    <div class="hero-content">
      <div class="container">
        <h1 class="hero-title">Meet Our Team</h1>
        <p class="hero-subtitle">
          Join us in creating lasting change and building a more equitable world
          for all
        </p>
        <a href="/contact" class="btn-primary">Join Us</a>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="team-section">
    <div class="container">
      <!-- Trustees Section -->
      <div class="team-category">
        <h2 class="team-category-title">TRUSTEES</h2>
        <div class="team-grid">
          {
            teamData.trustees.map((member) => (
              <div class="team-member">
                <div class="team-member-image-wrapper">
                  <Image
                    src={teamImages[member.imageUrl]}
                    alt={member.name}
                    class="team-member-image"
                    width={250}
                    height={250}
                    loading="lazy"
                  />
                </div>
                <h3 class="team-member-name">{member.name}</h3>
                <p class="team-member-title">{member.title}</p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Core Team Section -->
      <div class="team-category">
        <h2 class="team-category-title">CORE TEAM</h2>
        <div class="team-grid">
          {
            teamData.coreTeam.map((member) => (
              <div class="team-member">
                <div class="team-member-image-wrapper">
                  <Image
                    src={teamImages[member.imageUrl]}
                    alt={member.name}
                    class="team-member-image"
                    width={250}
                    height={250}
                    loading="lazy"
                  />
                </div>
                <h3 class="team-member-name">{member.name}</h3>
                <p class="team-member-title">{member.title}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style lang="scss" is:global>
  @import "../styles/styles.scss";

  .hero {
    height: 60vh;
  }

  // Team Section Styles
  .team-section {
    padding: 5rem 0;
    background: white;

    @include mobile {
      padding: 3rem 0;
    }
  }

  .team-category {
    margin-bottom: 5rem;

    @include mobile {
      margin-bottom: 3rem;
    }
  }

  .team-category-title {
    text-align: center;
    font-weight: $font-weight-bold;
    font-size: 2.5rem;
    color: $primary;
    margin-bottom: 3rem;
    text-transform: uppercase;
    letter-spacing: 2px;

    @include mobile {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
    max-width: 800px;
    margin: 0 auto;

    @include mobile {
      grid-template-columns: 1fr;
      gap: 2rem;
      max-width: 400px;
    }
  }

  .team-member {
    text-align: center;
    transition: transform 0.3s ease;

    &:hover {
      transform: translateY(-5px);
    }
  }

  .team-member-image-wrapper {
    // width: 250px;
    // height: 250px;
    margin: 0 auto 1.5rem;
    overflow: hidden;
    // border: 4px solid $primary;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);

    @include mobile {
      width: 200px;
      height: 200px;
    }
  }

  .team-member-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .team-member-name {
    font-weight: $font-weight-bold;
    font-size: 1.2rem;
    color: $primary;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;

    @include mobile {
      font-size: 1rem;
    }
  }

  .team-member-title {
    font-weight: $font-weight-normal;
    font-size: 0.95rem;
    color: $primary;
    text-transform: uppercase;
    letter-spacing: 0.5px;

    @include mobile {
      font-size: 0.875rem;
    }
  }
</style>
