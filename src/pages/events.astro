---
import MainLayout from "../layouts/MainLayout.astro";
import EventCalendar from "../components/EventCalendar.astro";

const events = [
  {
    date: "2025-08-01",
    title: "1st August, 2025 Haq Charcha",
    time: "5:30 PM",
    tagline: "Masculinity, Interrupted: Building Male Allyship",
    description:
      "This time, we are exploring 'Masculinity, Interrupted: Building Male Allyship' - a dialogue about challenging conventional notions of masculinity and creating allies, of moving towards change, shoulder to shoulder, as equals.",
    info: "/event/info.png",
    image: "/event/1.png",
    link: "#",
  },
  {
    date: "2025-08-01",
    title: "1st August, 2025 Haq Charcha",
    time: "5:30 PM",
    tagline: "Masculinity, Interrupted: Building Male Allyship",
    description:
      "This time, we are exploring 'Masculinity, Interrupted: Building Male Allyship' - a dialogue about challenging conventional notions of masculinity and creating allies, of moving towards change, shoulder to shoulder, as equals.",
    info: "/event/info.png",
    image: "/event/2.png",
    link: "#",
  },
  {
    date: "2025-08-01",
    title: "1st August, 2025 Haq Charcha",
    time: "5:30 PM",
    tagline: "Masculinity, Interrupted: Building Male Allyship",
    description:
      "This time, we are exploring 'Masculinity, Interrupted: Building Male Allyship' - a dialogue about challenging conventional notions of masculinity and creating allies, of moving towards change, shoulder to shoulder, as equals.",
    info: "/event/info.png",
    image: "/event/3.png",
    link: "#",
  },
  // Add more events here as needed
];
---

<MainLayout title="Events" description="Her Haq Events">
  <section class="container">
    <h2 style="color:#8B2C2B; margin-top:2rem;">EVENT CALENDAR</h2>
    <EventCalendar events={events} />

    <h2 style="color:#8B2C2B; margin-top:2.5rem;">UPCOMING EVENTS</h2>
    <div class="upcoming-events">
      {
        events.map((event) => (
          <div class="upcoming-event">
            <div class="left">
              <img src={event.image} alt={event.title} class="event-thumb" />
              <div class="event-title">{event.title}</div>
            </div>
            <div class="event-content">
              {/* <div class="event-date">
                {new Date(event.date)
                  .toLocaleDateString("en-GB", {
                    day: "numeric",
                    month: "long",
                    year: "numeric",
                  })
                  .toUpperCase()}
              </div> */}
              <div class="event-tagline">{event.tagline}</div>
              <div class="event-desc">{event.description}</div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</MainLayout>

<style lang="scss">
  @import "../styles/styles.scss";

  .upcoming-events {
    //max-width: 800px;
    margin: 2rem auto;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .upcoming-event {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    padding: 2rem 0;
    border-bottom: 1px solid #333;
    height: 100%;
    &:last-child {
      border-bottom: none;
    }

    .event-thumb {
      width: 300px;
      height: 220px;
      object-fit: cover;
      flex-shrink: 0;
    }

    .left {
      display: flex;
      align-items: end;
      flex: 0.8;
      gap: 1rem;
      height: 100%;
      @include mobile {
        flex-direction: column;
        align-items: start;
      }
    }

    .event-title {
      font-weight: 700;
      font-size: 1.5rem;
      color: #222;
      line-height: 1.3;
      @include mobile {
        color: $primary;
      }
    }

    .event-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      text-align: right;
      align-items: end;
      @include mobile {
        align-items: start;
        text-align: left;
      }
    }

    .event-date {
      font-weight: 600;
      color: #8b2c2b;
      font-size: 0.9rem;
      letter-spacing: 0.5px;
    }

    .event-tagline {
      font-weight: 700;
      font-size: 1.4rem;
      color: #222;
      line-height: 1.3;
    }

    .event-desc {
      font-size: 1.25rem;
      color: #555;
      line-height: 1.5;
      width: 90%;
    }
  }

  @include mobile {
    .upcoming-event {
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem 0;

      .event-thumb {
        width: 100%;
        height: 200px;
      }
    }
  }
</style>
