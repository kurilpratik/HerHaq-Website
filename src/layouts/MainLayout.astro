---
import Navbar from '../components/Navbar.astro';
import MainHead from './MainHead.astro';

//Using typescript
interface Props {
    title: string;
    description?: string;
}
const { 
    title,
    description
} = Astro.props as Props; //Destructured
---

<html lang="en">
    <MainHead title={title} description={description}/>
	<body>
        <Navbar />
		<slot />
	</body>
</html>

<style lang="scss" is:global>
    *, html, body{
        margin: 0;
        padding: 0;
    }

    html,body{
        width: 100%;
        overflow-x: hidden !important;
    }
    body{
        height: 100vh !important;
    }

    :root{
        --primary: #DB4152;
        --accent: #FCB415;
        --mobile: 600px;
    }

    $mobile : 600px;

    @font-face {
        font-family: Ageo;
        src: url(/fonts/Ageo.otf);
    }
    @font-face {
        font-family: Ageo-bold;
        src: url(/fonts/Ageo-Bold.otf);
    }
    @font-face {
        font-family: Ageo-light;
        src: url(/fonts/Ageo-Thin.ttf);
    }

    @mixin mobile {
        @media (max-width: #{$mobile}) {
            @content
        }
    }

    *{
        font-family: 'Ageo', sans-serif;
    }


    //Desktop First Approach
    .container {
        width: 80%;
        margin: 0 auto;

        @include mobile{
            width: 90%;
        }
    }
</style>
