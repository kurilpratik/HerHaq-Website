<style lang="scss" is:global>
  @import "../styles/styles.scss";

  .footer {
    background-color: $primary;
    color: white;
    padding: 3rem 0 1rem 0;
    margin-top: auto;

    .footer-content {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      gap: 2rem;
      margin-bottom: 2rem;

      @include mobile {
        grid-template-columns: 1fr;
        gap: 1.5rem;
        text-align: center;
      }
    }

    .footer-column {
      .footer-logo {
        // margin-bottom: 1rem;

        img {
          height: 5rem;
          width: auto;
        }
      }

      .footer-description {
        font-size: 0.9rem;
        line-height: 1.6;
        opacity: 0.9;
        margin-bottom: 1rem;
        width: 60%;
        @include mobile {
          width: 100%;
        }
      }

      .footer-heading {
        font-size: 1.1rem;
        font-weight: $font-weight-bold;
        margin-bottom: 1rem;
        color: white;
      }

      .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;

        li {
          margin-bottom: 0.5rem;

          a {
            color: white;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            opacity: 0.9;

            &:hover {
              opacity: 1;
              color: $accent;
            }
          }
        }
      }

      .social-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;

        @include mobile {
          justify-content: center;
        }

        a {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 40px;
          height: 40px;
          background-color: rgba(255, 255, 255, 0.1);
          border-radius: 50%;
          color: white;
          text-decoration: none;
          transition: all 0.3s ease;

          &:hover {
            background-color: $accent;
            transform: translateY(-2px);
          }

          svg {
            width: 20px;
            height: 20px;
          }
        }
      }
    }

    .footer-bottom {
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      padding-top: 1rem;
      text-align: center;

      p {
        font-size: 0.8rem;
        opacity: 0.8;
        margin: 0;
      }
    }
  }
</style>
