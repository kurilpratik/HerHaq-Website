---
const { events = [] } = Astro.props;

// Helper: get all days in a month
function getDaysInMonth(year, month) {
  return new Date(year, month + 1, 0).getDate();
}

// For demo: August 2025
const year = 2025;
const month = 7; // August (0-indexed)
const daysInMonth = getDaysInMonth(year, month);

// Map events by day for quick lookup
const eventsByDay = {};
events.forEach((event) => {
  const day = new Date(event.date).getDate();
  eventsByDay[day] = event;
});

// Calculate the first day of the month (0 = Sunday, 1 = Monday, etc.)
const firstDayOfMonth = new Date(year, month, 1).getDay();
// Convert to Monday-based index (0 = Monday, 1 = Tuesday, ..., 6 = Sunday)
const mondayBasedFirstDay = firstDayOfMonth === 0 ? 6 : firstDayOfMonth - 1;

// Create calendar weeks
const totalCells = mondayBasedFirstDay + daysInMonth;
const numberOfWeeks = Math.ceil(totalCells / 7);
const calendarWeeks = [];

for (let week = 0; week < numberOfWeeks; week++) {
  const weekDays = [];
  for (let dayOfWeek = 0; dayOfWeek < 7; dayOfWeek++) {
    const cellIndex = week * 7 + dayOfWeek;
    if (cellIndex < mondayBasedFirstDay) {
      // Empty cell before the month starts
      weekDays.push({ type: "empty" });
    } else if (cellIndex < mondayBasedFirstDay + daysInMonth) {
      // Day of the month
      const dayOfMonth = cellIndex - mondayBasedFirstDay + 1;
      weekDays.push({
        type: "date",
        day: dayOfMonth,
        event: eventsByDay[dayOfMonth],
      });
    } else {
      // Empty cell after the month ends
      weekDays.push({ type: "empty" });
    }
  }
  calendarWeeks.push(weekDays);
}
---

<div class="event-calendar">
  <div class="calendar-header">
    <span>August 2025</span>
  </div>
  <div class="calendar-grid">
    <div class="calendar-row calendar-days">
      <div>Mon</div><div>Tue</div><div>Wed</div><div>Thu</div><div>Fri</div><div
      >
        Sat
      </div><div>Sun</div>
    </div>
    {
      calendarWeeks.map((week) => (
        <div class="calendar-row">
          {week.map((cell) => {
            if (cell.type === "empty") {
              return <div class="calendar-cell empty" />;
            } else {
              const { day, event } = cell;
              return (
                <div class={`calendar-cell${event ? " has-event" : ""}`}>
                  <span>{day}</span>
                  {event && (
                    <div class="event-popup">
                      <img src={event.info} alt={event.title} />
                      <div class="flex">
                        <div class="event-title">{event.title}</div>
                        <div class="event-time">{event.time}</div>
                      </div>

                      <div class="event-desc">{event.description}</div>
                      <a href={event.link} class="event-link">
                        View More
                      </a>
                    </div>
                  )}
                </div>
              );
            }
          })}
        </div>
      ))
    }
  </div>
</div>
